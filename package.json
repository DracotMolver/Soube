{
  "name": "soube",
  "version": "2.0.0",
  "description": "Simple music player",
  "author": {
    "email": "dmolina@soube.diegomolina.cl",
    "name": "Diego Molina Vera"
  },
  "homepage": "http://soube.diegomolina.cl",
  "devDependencies": {
    "electron": "^1.6.10",
    "electron-builder": "^18.3.5"
  },
  "build": {
    "copyright": "Copyright © 2016 - 2017. Diego Molina Vera.",
    "asar": true,
    "linux": {
      "vendor": "Diego Molina Vera",
      "maintainer": "Diego Molina Vera",
      "category": "Audio",
      "packageCategory": "sound",
      "target": [
        "rpm",
        "deb"
      ],
      "description": "Soube — Simple music player",
      "desktop": {
        "Type": "Application",
        "Encoding": "UTF-8",
        "Name": "Soube",
        "Exec": "soube",
        "Terminal": "false",
        "Version": "2.0.0",
        "Categories": "Audio;Music;Player;AudioVideo"
      }
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg"
    }
  },
  "fileAssociations": [
    {
      "ext": [
        ".mp3",
        ".wmv",
        ".wav",
        ".ogg"
      ],
      "description": "Music files extensions",
      "role": "none",
      "icon": "extIcons"
    }
  ],
  "nsis": {
    "perMachine": true,
    "deleteAppDataOnUninstall": true
  },
  "postinstall": "install-app-deps",
  "scripts": {
    "dist": "build"
  }
}
